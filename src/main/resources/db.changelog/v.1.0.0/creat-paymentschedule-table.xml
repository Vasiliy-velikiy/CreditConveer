<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="creat-paymentschedule-table" author="Moskalev">
        <createTable tableName="payment_schedule">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="date" type="date"/>
            <column name="number" type="int"/>
            <column name="totalPayment" type="int"/>
            <column name="interestPayment" type="int"/>
            <column name="debtPayment" type="int"/>
            <column name=" remainingDebt" type="int"/>
            <column name="credit_id" type="int">
                <constraints foreignKeyName="paymentschedule_credit_id_credit_id" references="credit(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>