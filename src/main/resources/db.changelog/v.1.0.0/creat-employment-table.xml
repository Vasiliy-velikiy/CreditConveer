<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="creat-employment-table" author="Moskalev">
        <createTable tableName="employment">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="employer" type="varchar(64)"/>
            <column name="employment_status" type="varchar(64)"/>
            <column name="position" type="varchar(64)"/>
            <column name="salary" type="int"/>
            <column name="work_experience_current" type="int"/>
            <column name="work_experience_total" type="int"/>
            <column name="client_id" type="int">
                <constraints foreignKeyName="employment_client_id_client_id" references="client(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>